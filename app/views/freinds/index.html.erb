<table class="table table-striped table-hover table-bordered">
  <thead class="table-primary">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @freinds.each do |freind| %>
      <tr>
        <td><%= freind.first_name %></td>
        <td><%= freind.last_name %></td>
        <td><%= freind.email %></td>
        <td><%= freind.phone %></td>
        <td><%= freind.twitter %></td>
        <td><%= link_to 'Show', freind %></td>
        <td><%= link_to 'Edit', edit_freind_path(freind) %></td>
        <td><%= link_to 'Destroy', freind, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Freind', new_freind_path, class:"btn btn-primary" %>

